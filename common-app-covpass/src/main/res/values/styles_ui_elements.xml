<resources>

  <style name="InfoElement">
    <item name="icon">@null</item>
    <item name="elementColor">@null</item>
  </style>

  <style name="InfoElement.Warning">
    <item name="icon">@drawable/info_warning</item>
    <item name="elementColor">@drawable/warning_background</item>
  </style>

  <style name="InfoElement.Error">
    <item name="icon">@drawable/detail_cert_status_incomplete</item>
    <item name="elementColor">@drawable/error_background</item>
  </style>

  <style name="InfoElement.Success">
    <item name="icon">@drawable/detail_cert_status_complete</item>
    <item name="elementColor">@drawable/success_background</item>
  </style>

  <style name="InfoElement.Info">
    <item name="icon">@drawable/main_cert_expiry_period</item>
    <item name="elementColor">@drawable/info_background</item>
  </style>

  <style name="TimePickerTheme">
    <item name="android:textColorPrimary">@color/brandAccent70</item>
    <item name="android:textColorSecondary">@android:color/transparent</item>
    <item name="android:fontFamily">@font/ibmplexsans_text</item>
    <item name="android:textSize">@dimen/textsize_header_standard</item>
  </style>

</resources>
