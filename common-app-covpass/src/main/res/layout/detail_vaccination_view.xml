<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/grid_three"
    android:layout_marginTop="@dimen/grid_four"
    android:layout_marginEnd="@dimen/grid_two"
    android:layout_marginBottom="@dimen/grid_one_half">

    <TextView
      android:id="@+id/detail_vaccination_header_textview"
      style="@style/Header.OnBackground.MediumBig"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:layout_marginEnd="@dimen/grid_three"
      android:layout_toStartOf="@id/detail_vaccination_delete_imagebutton" />

    <ImageButton
      android:id="@+id/detail_vaccination_delete_imagebutton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:padding="@dimen/grid_one"
      android:src="@drawable/trash"
      android:theme="@style/VaccinationAppTheme.DarkControlHighlight"
      tools:ignore="ContentDescription" />

  </RelativeLayout>

  <include
    android:id="@+id/detail_vaccination_occurrence_data_row"
    layout="@layout/detail_data_row" />

  <View
    android:id="@+id/detail_vaccination_occurrence_data_divider"
    style="@style/Divider" />

  <include
    android:id="@+id/detail_vaccination_product_data_row"
    layout="@layout/detail_data_row" />

  <View
    android:id="@+id/detail_vaccination_product_data_divider"
    style="@style/Divider" />

  <include
    android:id="@+id/detail_vaccination_manufacturer_data_row"
    layout="@layout/detail_data_row" />

  <View
    android:id="@+id/detail_vaccination_manufacturer_data_divider"
    style="@style/Divider" />

  <include
    android:id="@+id/detail_vaccination_issuer_data_row"
    layout="@layout/detail_data_row" />

  <View
    android:id="@+id/detail_vaccination_issuer_data_divider"
    style="@style/Divider" />

  <include
    android:id="@+id/detail_vaccination_country_data_row"
    layout="@layout/detail_data_row" />

  <View
    android:id="@+id/detail_vaccination_country_data_divider"
    style="@style/Divider" />

  <include
    android:id="@+id/detail_vaccination_uvci_data_row"
    layout="@layout/detail_data_row" />

  <View
    android:id="@+id/detail_vaccination_uvci_data_divider"
    style="@style/Divider" />

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundSecondary">

    <com.google.android.material.button.MaterialButton
      android:id="@+id/detail_vaccination_display_qr_button"
      style="@style/SecondaryButton.Delete"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginHorizontal="@dimen/grid_three"
      android:layout_marginTop="@dimen/grid_three"
      android:layout_marginBottom="@dimen/grid_five"
      android:text="@string/vaccination_certificate_detail_view_qrcode_action_button_title"
      app:icon="@drawable/scan_qr" />

  </FrameLayout>

</LinearLayout>
