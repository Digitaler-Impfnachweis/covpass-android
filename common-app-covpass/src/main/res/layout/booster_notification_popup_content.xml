<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingHorizontal="@dimen/grid_three">

  <TextView
    android:id="@+id/notification_booster_title"
    style="@style/Header.OnBackground.MediumBig"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/grid_two"
    app:layout_constraintEnd_toStartOf="@+id/notification_booster_icon_new"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="HardcodedText" />

  <TextView
    android:id="@+id/notification_booster_icon_new"
    style="@style/Header.OnInfo.Small"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_new_booster"
    android:gravity="center"
    android:textAlignment="center"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="HardcodedText" />

  <TextView
    android:id="@+id/notification_booster_text"
    style="@style/DefaultText.OnBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/grid_four"
    android:layout_marginBottom="@dimen/grid_two_half"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/notification_booster_title"
    tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>