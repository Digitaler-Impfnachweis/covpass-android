<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <ImageView
    android:id="@+id/checker_remark_illustration"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    android:contentDescription="@string/accessibility_image_alternative_text"
    android:src="@drawable/covpass_scan_please" />

  <TextView
    android:id="@+id/checker_remark_content"
    style="@style/DefaultText.OnBackground"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/grid_three"
    android:text="@string/certificate_start_screen_pop_up_app_reference_text" />

  <TextView
    android:id="@+id/checker_remark_content_explanation"
    style="@style/DefaultText.OnBackground"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/grid_three"
    android:text="@string/certificate_popup_checkapp_link_label" />

  <TextView
    android:id="@+id/checker_remark_faq"
    style="@style/NavigationField" />

</LinearLayout>
