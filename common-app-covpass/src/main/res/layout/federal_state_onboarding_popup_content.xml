<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingBottom="@dimen/grid_fifteen">

  <ImageView
    android:id="@+id/federal_state_onboarding_illustration"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/federal_state_onboarding_ilustration"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="ContentDescription" />

  <TextView
    android:id="@+id/federal_state_onboarding_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/grid_three"
    android:layout_marginTop="@dimen/grid_three"
    android:text="@string/infschg_popup_choose_federal_state_copy_1"
    app:layout_constraintTop_toBottomOf="@+id/federal_state_onboarding_illustration" />

  <de.rki.covpass.commonapp.uielements.TextViewWithHint
    android:id="@+id/federal_state_onboarding_value"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/grid_one"
    android:clickable="true"
    android:focusable="true"
    app:hint="@string/infschg_settings_federal_state_page_tag"
    app:icon="@drawable/federal_state_icon_settings"
    app:layout_constraintTop_toBottomOf="@+id/federal_state_onboarding_text" />

  <TextView
    android:id="@+id/federal_state_onboarding_note"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/grid_three"
    android:layout_marginTop="@dimen/grid_one"
    android:text="@string/infschg_popup_choose_federal_state_copy_2"
    app:layout_constraintTop_toBottomOf="@+id/federal_state_onboarding_value" />

</androidx.constraintlayout.widget.ConstraintLayout>