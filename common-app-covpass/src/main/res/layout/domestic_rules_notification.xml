<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingBottom="@dimen/grid_fifteen">

  <TextView
    android:id="@+id/domestic_rules_notification_title"
    style="@style/Header.OnBackground.MediumBig"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/grid_three"
    android:layout_marginTop="@dimen/grid_one_half"
    android:layout_marginEnd="@dimen/grid_three"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="@tools:sample/lorem[5]" />

  <ImageView
    android:id="@+id/domestic_rules_notification_illustration"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/grid_five"
    android:importantForAccessibility="no"
    android:src="@drawable/domestic_rules_illustration"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/domestic_rules_notification_title" />

  <TextView
    android:id="@+id/domestic_rules_notification_note_title"
    style="@style/DefaultText.OnBackground.Bold"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/grid_three"
    android:layout_marginTop="@dimen/grid_three"
    app:layout_constraintTop_toBottomOf="@+id/domestic_rules_notification_illustration"
    tools:text="@tools:sample/lorem[10]" />

  <TextView
    android:id="@+id/domestic_rules_notification_note"
    style="@style/DefaultText.OnBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/grid_three"
    android:layout_marginTop="@dimen/grid_one_half"
    app:layout_constraintTop_toBottomOf="@+id/domestic_rules_notification_note_title"
    tools:text="@tools:sample/lorem[20]" />

</androidx.constraintlayout.widget.ConstraintLayout>
