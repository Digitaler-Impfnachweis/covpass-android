root = true

[*]
end_of_line = lf
max_line_length = 120
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{gradle,java,kt,kts,pro,py,pyw}]
indent_size = 4

[Jenkinsfile]
indent_size = 4

[*.{kt,kts}]
ij_kotlin_imports_layout=*,java.**,javax.**,kotlin.**,^
disabled_rules=annotation,enum-entry-name-case,filename
ij_kotlin_allow_trailing_comma = true
ij_kotlin_allow_trailing_comma_on_call_site = true
ij_kotlin_name_count_to_use_star_import = 1000000
ij_kotlin_name_count_to_use_star_import_for_members = 1000000
ij_kotlin_packages_to_use_import_on_demand = kotlinx.android.synthetic.**