<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <TextView
    android:id="@+id/choose_vaccination_mode_subtitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/grid_three"
    app:layout_constraintTop_toTopOf="parent" />

  <de.rki.covpass.commonapp.uielements.CheckContextCheckboxElement
    android:id="@+id/choose_vaccination_mode_germany_checkbox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/grid_three"
    app:layout_constraintTop_toBottomOf="@+id/choose_vaccination_mode_subtitle" />


  <de.rki.covpass.commonapp.uielements.CheckContextCheckboxElement
    android:id="@+id/choose_vaccination_mode_entry_checkbox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/choose_vaccination_mode_germany_checkbox" />

  <ImageView
    android:id="@+id/choose_vaccination_mode_info_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/grid_three"
    android:layout_marginTop="@dimen/grid_one_half"
    android:contentDescription="@null"
    android:src="@drawable/icon_setting_choose_vaccination_mode"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/choose_vaccination_mode_entry_checkbox" />

  <TextView
    android:id="@+id/choose_vaccination_mode_info_text"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/grid_three"
    android:layout_marginTop="@dimen/grid_one_half"
    android:layout_marginEnd="@dimen/grid_three"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/choose_vaccination_mode_info_icon"
    app:layout_constraintTop_toBottomOf="@+id/choose_vaccination_mode_entry_checkbox" />

</androidx.constraintlayout.widget.ConstraintLayout>
