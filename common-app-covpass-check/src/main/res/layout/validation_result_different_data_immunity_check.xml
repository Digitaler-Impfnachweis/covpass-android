<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingBottom="@dimen/grid_fifteen">

  <TextView
    android:id="@+id/validation_result_different_data_note"
    style="@style/DefaultText.OnBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/grid_three"
    android:text="@string/warning_2G_names_subtitle"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/validation_result_different_data_first_certificate_title"
    style="@style/DefaultText.OnBackground70"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/grid_three"
    android:layout_marginTop="@dimen/grid_three"
    android:text="@string/infschg_result_mask_mandatory_deviating_data_subtitle_1"
    app:layout_constraintTop_toBottomOf="@+id/validation_result_different_data_note" />

  <de.rki.covpass.checkapp.uielements.ValidationResultInfoElement
    android:id="@+id/validation_result_different_data_first_certificate_data_element"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/grid_three"
    android:layout_marginTop="@dimen/grid_one"
    app:layout_constraintTop_toBottomOf="@+id/validation_result_different_data_first_certificate_title" />

  <TextView
    android:id="@+id/validation_result_different_data_second_certificate_title"
    style="@style/DefaultText.OnBackground70"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/grid_three"
    android:layout_marginTop="@dimen/grid_three"
    android:text="@string/infschg_result_mask_mandatory_deviating_data_subtitle_2"
    app:layout_constraintTop_toBottomOf="@+id/validation_result_different_data_first_certificate_data_element" />

  <de.rki.covpass.checkapp.uielements.ValidationResultInfoElement
    android:id="@+id/validation_result_different_data_second_certificate_data_element"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/grid_three"
    android:layout_marginTop="@dimen/grid_one"
    app:layout_constraintTop_toBottomOf="@+id/validation_result_different_data_second_certificate_title" />

  <TextView
    android:id="@+id/validation_result_different_data_third_certificate_title"
    style="@style/DefaultText.OnBackground70"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/grid_three"
    android:layout_marginTop="@dimen/grid_three"
    android:text="@string/functional_validation_check_popup_second_scan_blue_card_3_title"
    app:layout_constraintTop_toBottomOf="@+id/validation_result_different_data_second_certificate_data_element" />

  <de.rki.covpass.checkapp.uielements.ValidationResultInfoElement
    android:id="@+id/validation_result_different_data_third_certificate_data_element"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/grid_three"
    android:layout_marginTop="@dimen/grid_one"
    app:layout_constraintTop_toBottomOf="@+id/validation_result_different_data_third_certificate_title" />

  <TextView
    android:id="@+id/validation_result_different_data_valid_difference_title"
    style="@style/Header.OnBackground.Small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/grid_three"
    android:layout_marginTop="@dimen/grid_four_half"
    android:text="@string/warning_2G_names_ignore_title"
    app:layout_constraintTop_toBottomOf="@+id/validation_result_different_data_third_certificate_data_element" />

  <TextView
    android:id="@+id/validation_result_different_data_valid_difference_text"
    style="@style/DefaultText.OnBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/grid_three"
    android:text="@string/warning_2G_names_ignore_copy"
    app:layout_constraintTop_toBottomOf="@+id/validation_result_different_data_valid_difference_title" />

  <TextView
    android:id="@+id/validation_result_different_data_valid_difference_button"
    style="@style/DefaultText.OnBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/grid_three"
    android:layout_marginTop="@dimen/grid_half"
    android:layout_marginBottom="@dimen/grid_two"
    android:clickable="true"
    android:focusable="true"
    android:text="@string/warning_2G_names_ignore_link"
    android:textColor="@color/info"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/validation_result_different_data_valid_difference_text" />

</androidx.constraintlayout.widget.ConstraintLayout>