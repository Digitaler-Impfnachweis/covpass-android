<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingBottom="@dimen/grid_fifteen">

  <de.rki.covpass.checkapp.uielements.ValidationResultCertificateElement
    android:id="@+id/validation_result_first_certificate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/grid_three"
    android:layout_marginTop="@dimen/grid_one_half"
    android:minHeight="@dimen/grid_twelve"
    app:layout_constraintTop_toTopOf="parent" />

  <de.rki.covpass.checkapp.uielements.ValidationResultCertificateElement
    android:id="@+id/validation_result_second_certificate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/grid_three"
    android:layout_marginTop="@dimen/grid_one_half"
    android:minHeight="@dimen/grid_twelve"
    app:layout_constraintTop_toBottomOf="@+id/validation_result_first_certificate" />

  <de.rki.covpass.checkapp.uielements.ValidationResultCertificateElement
    android:id="@+id/validation_result_third_certificate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/grid_three"
    android:layout_marginTop="@dimen/grid_one_half"
    android:minHeight="@dimen/grid_twelve"
    app:layout_constraintTop_toBottomOf="@+id/validation_result_second_certificate" />

  <de.rki.covpass.commonapp.uielements.InfoElement
    android:id="@+id/validation_result_info_element"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/grid_three"
    android:layout_marginTop="@dimen/grid_one_half"
    app:layout_constraintTop_toBottomOf="@+id/validation_result_third_certificate" />

</androidx.constraintlayout.widget.ConstraintLayout>