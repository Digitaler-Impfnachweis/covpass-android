            android:name=".MockAlviTokenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/EgaAppThemeNoActionBar" />

        <activity
            android:name=".MockHostLoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/EgaAppThemeNoActionBar" />

    </application>

</manifest>
