<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">

  <com.google.android.material.card.MaterialCardView
    android:id="@+id/certificate_cardview"
    style="@style/VaccinationCardView.Elevated"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/grid_one">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:gravity="center_horizontal"
      android:orientation="vertical">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/grid_three"
        android:layout_marginTop="@dimen/grid_three"
        android:layout_marginEnd="@dimen/grid_one_half">

        <TextView
          android:id="@+id/certificate_header_textview"
          style="@style/Header.OnInfo.Standard"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_centerInParent="true"
          android:layout_toLeftOf="@id/certificate_favorite_button"
          android:text="@string/covid_header" />

        <ImageButton
          android:id="@+id/certificate_favorite_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_centerInParent="true"
          android:adjustViewBounds="true"
          android:background="?attr/selectableItemBackgroundBorderless"
          android:padding="@dimen/grid_one"
          tools:ignore="ContentDescription" />

      </RelativeLayout>

      <TextView
        android:id="@+id/certificate_name_textview"
        style="@style/Header.OnInfo.Big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/grid_three"
        android:layout_marginEnd="@dimen/grid_two_half" />

      <RelativeLayout
        android:id="@+id/certificate_vaccination_status_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:paddingVertical="@dimen/grid_two_half"
        android:paddingStart="@dimen/grid_three"
        android:paddingEnd="@dimen/grid_two_half">

        <ImageView
          android:id="@+id/certificate_vaccination_status_imageview"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_centerInParent="true"
          android:adjustViewBounds="true"
          tools:ignore="ContentDescription" />

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:layout_marginStart="@dimen/grid_one"
          android:layout_toLeftOf="@id/certificate_arrow_imageview"
          android:layout_toRightOf="@id/certificate_vaccination_status_imageview"
          android:orientation="vertical">

          <TextView
            android:id="@+id/certificate_protection_textview"
            style="@style/Header.OnInfo.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

          <TextView
            android:id="@+id/certificate_series_textview"
            style="@style/DefaultText.OnInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
          android:id="@+id/certificate_arrow_imageview"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_centerInParent="true"
          android:adjustViewBounds="true"
          tools:ignore="ContentDescription" />

      </RelativeLayout>

      <!--   A bit strange implementation here because we want to preserve the space also for incomplete certificates
      to have equal cardview size   -->
      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
          android:id="@+id/certificate_qr_cardview"
          style="@style/VaccinationCardView.Level"
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_marginHorizontal="@dimen/grid_seven"
          android:layout_marginTop="@dimen/grid_two"
          android:layout_marginBottom="@dimen/grid_three"
          app:cardBackgroundColor="@color/backgroundSecondary"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintDimensionRatio="H,1:1"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent">

          <ImageView
            android:id="@+id/certificate_qr_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/grid_one"
            android:adjustViewBounds="true"
            tools:ignore="ContentDescription" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
          android:id="@+id/certificate_add_button"
          style="@style/PrimaryButton.Dark"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/grid_five"
          android:text="@string/certificate_add_button_text"
          android:visibility="gone"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent" />

      </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

  </com.google.android.material.card.MaterialCardView>

</FrameLayout>

