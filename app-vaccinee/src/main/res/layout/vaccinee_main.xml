<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:fillViewport="true">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/main_header_textview"
      style="@style/Header.OnBackground.Extralarge"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="@dimen/grid_three"
      android:layout_marginTop="@dimen/grid_six"
      android:layout_marginEnd="@dimen/grid_eight"
      android:text="@string/main_header" />

    <ImageButton
      android:id="@+id/main_settings_imagebutton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_alignParentEnd="true"
      android:layout_marginTop="@dimen/grid_seven_half"
      android:layout_marginEnd="@dimen/grid_two"
      android:padding="@dimen/grid_one"
      android:adjustViewBounds="true"
      android:theme="@style/VaccinationAppTheme.DarkControlHighlight"
      android:background="?attr/selectableItemBackgroundBorderless"
      android:src="@drawable/settings"
      tools:ignore="ContentDescription" />

    <FrameLayout
      android:id="@+id/main_cardview_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/main_header_textview"
      android:layout_marginTop="@dimen/grid_three_half">

      <com.google.android.material.card.MaterialCardView
        android:id="@+id/main_empty_cardview"
        style="@style/VaccinationCardView.Level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/grid_three"
        android:layout_marginTop="@dimen/grid_one"
        app:cardBackgroundColor="@color/onBackground20">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:gravity="center_horizontal"
          android:orientation="vertical">

          <ImageView
            android:id="@+id/main_empty_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_eight"
            android:adjustViewBounds="true"
            android:src="@drawable/empty_state_vaccination"
            tools:ignore="ContentDescription" />

          <TextView
            android:id="@+id/main_empty_header_textview"
            style="@style/Header.OnBackground.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/grid_six"
            android:layout_marginTop="@dimen/grid_one_half"
            android:gravity="center_horizontal"
            android:text="@string/main_empty_header" />

          <TextView
            android:id="@+id/main_empty_textview"
            style="@style/DefaultText.OnBackground70"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/grid_six"
            android:gravity="center_horizontal"
            android:text="@string/main_empty_text" />

          <com.google.android.material.button.MaterialButton
            android:id="@+id/main_empty_button"
            style="@style/PrimaryButton.Dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_six"
            android:layout_marginBottom="@dimen/grid_three"
            android:text="@string/main_empty_button_text" />

        </LinearLayout>

      </com.google.android.material.card.MaterialCardView>

      <LinearLayout
        android:id="@+id/main_view_pager_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/grid_two"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.viewpager2.widget.ViewPager2
          android:id="@+id/main_view_pager"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

        <com.google.android.material.tabs.TabLayout
          android:id="@+id/main_tab_layout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:tabBackground="@drawable/view_pager_dot_selector"
          app:tabIndicator="@drawable/view_pager_dot_selected"
          app:tabIndicatorColor="@color/brandAccent"
          app:tabIndicatorGravity="center"
          app:tabMaxWidth="@dimen/dots_tab_max_width"
          app:tabRippleColor="@null" />

      </LinearLayout>

    </FrameLayout>

    <TextView
      android:id="@+id/main_faq_header_textview"
      style="@style/Header.OnBackground.MediumBig"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/main_cardview_container"
      android:layout_marginStart="@dimen/grid_three"
      android:layout_marginBottom="@dimen/grid_two"
      android:gravity="start"
      android:layout_marginTop="@dimen/grid_five"
      android:text="@string/faq_header" />

    <TextView
      android:id="@+id/main_faq_show_all_textview"
      style="@style/Header.OnBackground.Small"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBottom="@id/main_faq_header_textview"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="@dimen/grid_three"
      android:layout_marginTop="@dimen/grid_five"
      android:layout_marginEnd="@dimen/grid_three"
      android:layout_toRightOf="@id/main_faq_header_textview"
      android:gravity="end"
      android:text="@string/faq_show_all"
      android:textColorLink="@color/info" />

    <TextView
      android:id="@+id/main_faq_use_cert_textview"
      style="@style/Header.OnBackground.Small"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingVertical="@dimen/grid_one_half"
      android:layout_below="@id/main_faq_header_textview"
      android:layout_marginStart="@dimen/grid_three"
      android:layout_marginEnd="@dimen/grid_four"
      android:gravity="center_vertical"
      android:text="@string/faq_use_cert"
      android:textColorLink="@color/onBackground"
      app:drawableEndCompat="@drawable/arrow_right_blue" />

    <View
      android:id="@+id/main_faq_use_cert_divider"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/grid_eighth"
      android:layout_below="@id/main_faq_use_cert_textview"
      android:background="@color/onBackground20" />

    <TextView
      android:id="@+id/main_faq_get_qr_code_textview"
      style="@style/Header.OnBackground.Small"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingVertical="@dimen/grid_one_half"
      android:layout_below="@id/main_faq_use_cert_divider"
      android:layout_marginStart="@dimen/grid_three"
      android:layout_marginEnd="@dimen/grid_four"
      android:gravity="center_vertical"
      android:text="@string/faq_get_qr_code"
      android:textColorLink="@color/onBackground"
      app:drawableEndCompat="@drawable/arrow_right_blue" />

    <View
      android:id="@+id/main_faq_get_qr_code_divider"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/grid_eighth"
      android:layout_below="@id/main_faq_get_qr_code_textview"
      android:background="@color/onBackground20" />

    <TextView
      android:id="@+id/main_faq_data_usage_textview"
      style="@style/Header.OnBackground.Small"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingVertical="@dimen/grid_one_half"
      android:layout_below="@id/main_faq_get_qr_code_divider"
      android:layout_marginStart="@dimen/grid_three"
      android:layout_marginEnd="@dimen/grid_four"
      android:gravity="center_vertical"
      android:text="@string/faq_data_usage"
      android:textColorLink="@color/onBackground"
      app:drawableEndCompat="@drawable/arrow_right_blue" />

    <View
      android:id="@+id/main_faq_data_usage_divider"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/grid_eighth"
      android:layout_below="@id/main_faq_data_usage_textview"
      android:background="@color/onBackground20" />

    <com.ibm.health.common.vaccination.app.uielements.RoundImageButton
      android:id="@+id/main_add_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/main_faq_data_usage_divider"
      android:layout_centerHorizontal="true"
      android:layout_marginVertical="@dimen/grid_three"
      app:round_button_icon="@drawable/plus" />

  </RelativeLayout>

</ScrollView>
